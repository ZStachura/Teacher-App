        <TextView
            android:id="@+id/one_group_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_weight="9"
            android:background="@null"
            android:fontFamily="@font/rasa"
